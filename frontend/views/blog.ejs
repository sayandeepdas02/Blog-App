<!DOCTYPE html>
<html lang="en">

<head>

  <%- include("./partials/head") %>

    <title>Blogify | Blog</title>
</head>

<body>


  <%- include("./partials/nav") %>

    <div class="container mt-5">
      <div class="blog-container">
        <h1 class="blog-title">
          <%= blog.title %>
        </h1>

        <div class="d-flex align-items-center mb-4">
          <% if(blog.createdBy && blog.createdBy.profileImageURL) { %>
            <img src="<%= blog.createdBy.profileImageURL %>" class="rounded-circle me-2" width="40" height="40"
              style="object-fit: cover;">
            <% } %>
              <div>
                <span class="fw-bold d-block">
                  <%= blog.createdBy ? blog.createdBy.fullName : 'Unknown Author' %>
                </span>
                <span class="text-muted small">Published on <%= new Date(blog.createdAt).toLocaleDateString('en-US', {
                    year: 'numeric' , month: 'long' , day: 'numeric' }) %></span>
              </div>
        </div>

        <img src="<%= blog.coverImageURL %>" class="blog-image" alt="Cover Image">

        <div class="blog-body-text mt-4">
          <pre><%= blog.body %></pre>
        </div>
      </div>

      <div class="blog-container comment-section">
        <h3 class="mb-4">Comments (<%= comments.length %>)</h3>

        <% if (locals.user) { %>
          <form action="/blog/comment/<%= blog._id %>" method="post" class="mb-5">
            <div class="mb-3">
              <textarea class="form-control" name="content" placeholder="Join the discussion..." rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Post Comment</button>
          </form>
          <% } else { %>
            <div class="alert alert-light border mb-4" role="alert">
              Please <a href="/user/signin" class="alert-link">sign in</a> to leave a comment.
            </div>
            <% } %>

              <div class="mt-3">
                <% comments.forEach(comment=> { %>
                  <div class="comment-card">
                    <div class="user-badge">
                      <img src="<%= comment.createdBy.profileImageURL %>" alt="User">
                      <span>
                        <%= comment.createdBy.fullName %>
                      </span>
                    </div>
                    <div class="comment-text">
                      <%= comment.content %>
                    </div>
                  </div>
                  <% }) %>
              </div>
      </div>
    </div>

    <%- include("./partials/scripts") %>

</body>

</html>